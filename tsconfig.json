{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "strict": true,
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "src",
    "paths": {
      "server/*": ["./server/*"]
    }
  },
  "exclude": ["build", "node_modules"]
}
